<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-12">
      <h2 class="my-4">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:"lead mb-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-3" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"lead mb-1" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"mb-3" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class:"mb-3"%>
            <%= f.label :remember_me, class:"lead ml-2 mb-3" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-outline-light mb-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

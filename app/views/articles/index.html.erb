<div class="container my-4">
  <div class="d-flex justify-content-between mx-3">
    <div class="align-items-start">
      <h1 class="text text-success text-center">Recent Posts</h1>
    </div>
    <div class="align-items-end">
      <%= link_to "New Article", new_article_path, class:"btn btn-primary m-2" %>
    </div>
  </div>
  <div class="row row-cols-1 row-cols-md-2 g-0">
    <% @articles.each do |article| %>
      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= article.title %></h5>
        </div>
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted">Descripcion:</h6>
          <p class="card-text"><%= article.body %></p>
          <%= link_to "see more", article_path(article), class: "card-link" %>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
  

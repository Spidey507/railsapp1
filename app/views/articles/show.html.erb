<h1 class="text text-success text-center"><%= @Article.title%></h1>
<h2 class="text text-center"><%= @Article.body%></h2>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid d-flex justify-content-center">
    <div class="row d-flex ">
      <ul class="nav navbar-nav"> 
        <li class="nav-item mx-5"><p class="badge bg-warning text-dark"><%= "Views: #{@Article.views}"%></p>
        <li class="nav-item mx-5"><%= link_to "Edit", edit_article_path(@Article), class:"btn btn-success" %></li>
        <li class="nav-item mx-5"><%= link_to "Destroy", article_path(@Article),
                        method: :delete,
                        data: { confirm: "Are you sure?" }, class:"btn btn-danger" %></li>
        <li class="nav-item mx-5"><%= link_to "back", articles_path, class:"btn btn-info" %></li>
      </ul>
    </div>
  </div>
</nav>


<h3 class="m-2">Comments</h3>
<% @comments.each do |comment| %>
  <p>Created by: <%= comment.user.username%></p>
  <p>Body: <%= comment.body%></p>
<% end %>

<h4>Add a comment:</h4>
<%= render 'comments/form' %>



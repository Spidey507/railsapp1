<div class="card">
  <div class="m-2">
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>
  </div>
  <div class="m-2">
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  </div>
</div>

<p>
  <%= link_to 'Delete Comment', [comment.article, comment],
              method: :delete,
              data: { confirm: "Are you sure?" }, class:"btn btn-danger my-2" %>
</p>
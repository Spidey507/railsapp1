<div class="card">
  <div class="">
    <p class="mb-0">
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>
  </div>
  <div class="">
    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
    <div >
      <%= image_tag ("doge.jpg"), class:"img-thumbnail responsive-doge-img"%> 
    </div>
  </div>
</div>

<p>
  <%= link_to 'Delete Comment', [comment.article, comment],
              method: :delete,
              data: { confirm: "Are you sure?" }, class:"btn btn-danger my-2" %>
</p>